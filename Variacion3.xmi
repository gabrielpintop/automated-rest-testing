<?xml version="1.0" encoding="UTF-8"?>
<AutomatedRestTesting:AutomatedRestTesting
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:AutomatedRestTesting="http://www.example.org/AutomatedRestTesting">
  <elements
      xsi:type="AutomatedRestTesting:DomainEntity"
      name="Student">
    <domainAttributes
        name="first_name"/>
    <domainAttributes
        name="last_name"/>
    <domainAttributes
        name="gender"/>
    <domainAttributes
        name="code"
        primaryKey="true"/>
    <domainAttributes
        name="country"/>
    <domainAttributes
        name="city"/>
    <domainAttributes
        name="university"/>
  </elements>
  <elements
      xsi:type="AutomatedRestTesting:DomainEntity"
      name="Country">
    <domainAttributes
        name="shortName"
        primaryKey="true">
      <restrictions
          valid="true"
          value="Longitud"/>
    </domainAttributes>
    <domainAttributes
        name="name"/>
    <domainAttributes
        name="native"/>
    <domainAttributes
        name="phone"/>
    <domainAttributes
        name="continent"/>
    <domainAttributes
        name="capital"/>
    <domainAttributes
        name="currency"/>
    <domainAttributes
        name="languages"/>
    <domainAttributes
        name="emoji"/>
    <domainAttributes
        name="emojiU"/>
  </elements>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="GetCountries"
      uri="/countries"
      resources="//@elements.1"/>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="GetCountryByShort"
      uri="/countries/{country}"
      resources="//@elements.1"/>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="GetStatesByCountry"
      uri="/countries/{country}/states"
      resources="//@elements.1">
    <response
        name="StateResponse">
      <responseAttributes
          name="Status"
          type="Integer"
          value="404">
        <assertions
            type="Integer"
            value="404"/>
      </responseAttributes>
    </response>
  </elements>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="GetCitiesByCountry"
      uri="/countries/{country}/cities"
      resources="//@elements.1"/>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="GetStudents"
      uri="/students"
      resources="//@elements.0"/>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="AddStudent"
      uri="/students"
      resources="//@elements.0"/>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="GetStudentById"
      uri="/students/{id}"
      resources="//@elements.0">
    <response
        name="StudentResponse">
      <responseAttributes
          name="first_name"
          value="José">
        <assertions
            value="José"/>
      </responseAttributes>
      <responseAttributes
          name="last_name"
          value="Rojas">
        <assertions
            value="Rojas"/>
      </responseAttributes>
      <responseAttributes
          name="gender"
          value="Male">
        <assertions
            value="Male"/>
      </responseAttributes>
      <responseAttributes
          name="Country"
          value="Colombia">
        <assertions
            value="Colombia"/>
      </responseAttributes>
      <responseAttributes
          name="City"
          value="Tunja">
        <assertions
            value="Tunja"/>
      </responseAttributes>
      <responseAttributes
          name="university"
          value="UNAL">
        <assertions
            value="UNAL"/>
      </responseAttributes>
    </response>
  </elements>
  <elements
      xsi:type="AutomatedRestTesting:RestService"
      name="DeleteStudent"
      uri="/students/{id}"
      resources="//@elements.0"
      method="Delete"/>
</AutomatedRestTesting:AutomatedRestTesting>
